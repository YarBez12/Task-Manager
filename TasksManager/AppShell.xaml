<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TasksManager.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TasksManager.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="TasksManager">
    <TabBar>

        <Tab
            Title="Current Tasks">
            <ShellContent ContentTemplate="{DataTemplate local:CurrentTasksPage}"/>
        </Tab>
        <Tab
            Title="Completed Tasks">
            <ShellContent ContentTemplate="{DataTemplate local:CompletedTasksPage}"/>
        </Tab>
        <Tab
            Title="Schedule">
            <ShellContent ContentTemplate="{DataTemplate local:SchedulePage}"></ShellContent>
        </Tab>
    </TabBar>

</Shell>
